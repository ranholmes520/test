<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#242938"
        android:orientation="horizontal" >
		<Button
            android:id="@+id/back2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="13sp" />
        <TextView 
            android:id="@+id/ListTitle_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
		    android:textSize="20sp"
		    android:gravity="center_horizontal"
		    android:layout_centerInParent="true"
            android:text="转账"/>

    </RelativeLayout>
    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#242938">
	    
	    <TextView 
	        android:id="@+id/activity_accountlist_balance"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#fff"
	        android:text="余额"
	        android:gravity="center_horizontal"/>
	    
	</RelativeLayout >
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:background="#242938">
	    
	    <com.ranholmes.view.EditTextId
	        android:id="@+id/activity_accountlist_edit"
	    android:layout_width="fill_parent"
	    android:layout_height="40dp"
	    android:layout_margin="5dp"
	    android:layout_centerInParent="true"
	    android:hint="输入转账金额"/>
	    
	</RelativeLayout >
	
	
	
	<com.ranholmes.view.MyListViewPullDownAndUp
	    android:id="@+id/activity_accountlist_listview"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"/>
	
	</LinearLayout>
</LinearLayout>
