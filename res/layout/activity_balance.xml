<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#242938"
        android:orientation="horizontal">
		<Button
            android:id="@+id/back2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="13sp" />
        <TextView 
            android:id="@+id/ListTitle_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
		    android:textSize="20sp"
		    android:gravity="center_horizontal"
		    android:layout_centerInParent="true"
            android:text="余额查询"/>

    </RelativeLayout>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent">
	    
	    
	    <RelativeLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="200dp"
	    android:background="#18b4ed">
	    <com.ranholmes.view.IndeterminateProgressBar 
	    android:id="@+id/login_pb"
	    android:layout_width="65dp"
	    android:layout_height="65dp"
	    android:layout_centerHorizontal="true"
	    android:background="@android:color/white"
	    android:layout_centerInParent="true"/>
	    <TextView 
	        android:id="@+id/activity_balance_txt"
 	    android:layout_width="fill_parent"
 	    android:layout_height="wrap_content"
 	    android:background="#18b4ed"
 	    android:textSize="40sp"
 	    android:layout_alignParentBottom="true"
 	    android:gravity="end"
 	    android:textColor="#fff"
 	    android:text="1000元"/>	
	    
	    
	</RelativeLayout>
 	
 	<RelativeLayout
 	    android:id="@+id/activity_balance_refresh" 
 	    android:layout_width="fill_parent"
 	    android:layout_height="match_parent"
 	    android:layout_weight="2">
 	    
 	    <TextView 
 	        android:layout_width="wrap_content"
 	        android:layout_height="wrap_content"
 	        android:text="任意点击刷新"
 	        android:textSize="22sp"
 	        android:layout_centerHorizontal="true"
 	        android:textColor="#aaa"
 	        android:layout_marginTop="300dp"/>
 	    
 	</RelativeLayout>
	    
	    
	    
	    
	</RelativeLayout>
	
	
</LinearLayout>
