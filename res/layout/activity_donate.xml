<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#fff">
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#242938"
        android:orientation="horizontal" >
		<Button
            android:id="@+id/back2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_style_back"
            android:text="返回"
            android:textColor="#fff"
            android:textSize="13sp" />
        <TextView 
            android:id="@+id/ListTitle_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
		    android:textSize="20sp"
		    android:gravity="center_horizontal"
		    android:layout_centerInParent="true"
            android:text="爱心捐款"/>

    </RelativeLayout>
	</LinearLayout>
	
 <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
			
            
            
            
            <RelativeLayout
                android:id="@+id/activity_donate_welfare_lotteries"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/preference_first_item"
                android:clickable="true"
                android:gravity="center_vertical" >
                
                <ImageView 
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_lottery1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_centerVertical="true"
                    android:text="福利彩票"
                    android:textColor="#888"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_donate_hong"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/preference_item"
                android:clickable="true"
                android:gravity="center_vertical" >
				
                <ImageView 
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_hong"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_centerVertical="true"
                    android:text="红十字会"
                    android:textColor="#888"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/activity_donate_welfare_yi"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/preference_item"
                android:clickable="true"
                android:gravity="center_vertical" >
				
                <ImageView 
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/image_yi"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="45dp"
                    android:layout_centerVertical="true"
                    android:text="壹基金"
                    android:textColor="#888"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:scaleType="matrix"
                    android:src="@drawable/mm_submenu" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
